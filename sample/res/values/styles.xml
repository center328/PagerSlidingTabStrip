<resources>

	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="actionBarTabSize">48dip</item>
	</style>

	<style name="AppTheme" parent="AppBaseTheme">
		<item name="android:windowBackground">@color/background_window</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionModeOverlay">true</item>
	</style>

	<style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="android:background">@color/colorPrimary</item>
		<item name="popupTheme">@style/MyPopupMenuTheme</item>
		<item name="theme">@style/MyToolBarStyle</item>
	</style>

	<style name="MyToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
	</style>

	<style name="MyPopupMenuTheme" parent="@style/ThemeOverlay.AppCompat">
		<item name="android:background">@color/colorPrimaryDark</item>
	</style>

	<style name="PageSlidingTabStripStyle">
		<item name="android:textAppearance">@style/MyTextAppearance</item>
		<item name="pstsIndicatorColor">@color/colorPrimary</item>
		<item name="pstsTabBackground">@drawable/page_sliding_background_selector</item>
		<item name="pstsUnderlineHeight">2dip</item>
		<item name="pstsUnderlineColor">@color/pstsUnderlineDividerColor</item>
		<item name="pstsDividerColor">@color/pstsDividerColor</item>
	</style>

	<style name="MyTextAppearance" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
		<item name="android:textColor">@drawable/tab_textcolor</item>
	</style>
</resources>